{
  "name": "authenticity-zkapp",
  "version": "0.3.0",
  "description": "Zero-knowledge proof system for verifying image authenticity on Mina blockchain",
  "author": "",
  "license": "Apache-2.0",
  "keywords": [
    "mina-zkapp",
    "mina-zk-app",
    "mina-dapp",
    "zkapp",
    "zero-knowledge",
    "image-verification",
    "sha256",
    "authenticity",
    "zksnark"
  ],
  "type": "module",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "exports": {
    ".": "./build/src/index.js",
    "./browser": "./build/src/browser.js"
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.d.ts",
    "!build/src/**/*.test.js",
    "!build/src/**/*.test.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && cp example/cat.png build/example/",
    "buildw": "tsc --watch",
    "coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "example": "npm run build && node build/example/prove-authenticity.js",
    "format": "prettier --write --ignore-unknown **/*",
    "test": "npm run build && find build/src -name '*.test.js' -exec node --test {} \\;",
    "testw": "npm run build && find build/src -name '*.test.js' -exec node --test --watch {} \\;",
    "lint": "npx eslint src/* --fix",
    "clear-cache": "npx rimraf cache/* !cache/README.md && npx rimraf cache.json && echo \"Cache cleared successfully!\"",
    "deploy:devnet": "npm run build && node build/src/deploy.js devnet",
    "deploy:mainnet": "npm run build && node build/src/deploy.js mainnet",
    "archive_example": "npm run build && node build/example/query-events-and-actions.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.7.0",
    "eslint-plugin-o1js": "^0.4.0",
    "prettier": "^2.3.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "o1js": "2.11"
  },
  "engines": {
    "node": ">=18.14.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}
